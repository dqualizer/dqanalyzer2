{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "node_modules/",
      "src/data",
      ".next/",
      ".devenv/",
      ".direnv/",
      "doc/",
      "public/",
      "screenshots/",
      "src/components/testing/",
      "src/components/scenariotest/",
      "/nix/store/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        },
        "noArrayIndexKey": {
          "level": "off"
        },
        "noAssignInExpressions": "off",
        "noImplicitAnyLet": "off",
        "noPrototypeBuiltins": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useKeyWithClickEvents": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noUselessElse": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}